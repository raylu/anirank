h2:
	margin: 25px 0 5px
	&::selection:
		background-color: inherit

.animelist:
	.entry:
		display: flex

		&:nth-child(even):
			background-color: #222

		div:
			flex: 1
			rverflow: hidden
			white-space: nowrap
			text-overflow: ellipsis
			padding: 3px 0 3px 5px

			&.center:
				text-align: center

			&:first-child:
				flex: 8

			&:last-child:
				flex: 2
				text-align: right
				padding-right: 5px
